

type User {
  id: Int
  username: String
  email: String
  role: String
}

input RegisterRequest {
  username: String!
  password: String!
  email: String!
}

input LoginRequest {
  username: String!
  password: String!
}


type AuthResponse {
  token: String!
}


type Query {
  #requiere token
  listarUsuario: [User]
  findUser(username: String):User
}

type Mutation {
  #publico
  login(request : LoginRequest ): AuthResponse
  register(request: RegisterRequest): AuthResponse
}
